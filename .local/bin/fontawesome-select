# a menu to select and copy a fontawesome symbol

. libsh || exit 1

shuf "${XDG_DATA_HOME:-$HOME/.local/share}/doc/fontawesome/symbols" \
  | prompt_gui "FA" \
  | cut -d" " -f1 \
  | clipboard_copy


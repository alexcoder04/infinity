# SH functions and variables for my scripts

# VARIABLES {{{
fzf_opts="--no-info --cycle --print-query --margin=1,2 --prompt=\"ï‡˜' \" --color=bg+:$COLOR_DARK_GREY"
closemsg="ready. you can close this window now"
# }}}

# INTERNAL functions {{{
# set specied color if outputting to console
_set_color(){
  if [ -t 1 ]; then
    pre="\033[$1m"; post="\033[0m"
  else
    pre=""; post=""
  fi
}
# }}}

# MESSAGES to the user {{{
# ERROR and exit
die(){
  _set_color 31
  echo "${pre}Error${post}: $1" "$2"
  exit 1
}

die_gui(){
  notify-send -u critical "Error: $1" "$2"
  die "$@"
}

# legacy version
die_notify(){
  die_gui "$@"
}

# WARNING
warn(){
  _set_color 33
  echo "${pre}Warning${post}: $1" "$2"
}

warn_gui(){
  notify-send "Warning: $1" "$2"
  warn "$@"
}

# INFO
inform(){
  _set_color 34
  echo "${pre}Info${post}: $1" "$2"
}

inform_gui(){
  notify-send "Info: $1" "$2"
  inform "$@"
}

# LOW PRIORITY INFO
lp_inform(){
  _set_color 37
  echo "${pre}Info${post}: $1" "$2"
}

lp_inform_gui(){
  notify-send -u low -t 1500 "Info: $1" "$2"
  lp_inform "$@"
}
# }}}

# user INPUT {{{
prompt(){
  FZF_DEFAULT_OPTS="$fzf_opts" fzf </dev/stdin
}

prompt_gui(){
  if [ -z "$DISPLAY" ] && [ -z "$WAYLAND_DISPLAY" ]; then
    prompt </dev/stdin
    return
  fi

  FZFPIPE=$(mktemp -u)
  mkfifo "$FZFPIPE"
  trap 'rm -f "$FZFPIPE"' EXIT INT

  launch -l sh -c "exec fzf $fzf_opts <$FZFPIPE" & disown
  cat /dev/stdin >"$FZFPIPE"
}
# }}}

# FILES {{{
dir_empty(){
  [ ! "$(ls -A "$1")" ]
}
# }}}

# CLIPBOARD {{{
clipboard_copy(){
  if [ "$XDG_SESSION_TYPE" = "wayland" ]; then
    wl-copy </dev/stdin
  else
    xclip -selection clipboard </dev/stdin
  fi
}
# }}}

# UI {{{
window(){
  launch -h -f "$@"
}
# }}}


# show a list of all unmountable drives and unmount the selected one

. libsh || exit 1

selected_drive="$(df -x devtmpfs --output=target \
  | tail -n +2 \
  | grep -vE "^(/dev|/run|/sys)" \
  | grep -vE "^(/|/boot|/home|/media/cache)$" \
  | prompt_gui "umount")"

[ -z "$selected_drive" ] \
    && exit 0

launch -h -f \
  eval "echo \"unmounting $selected_drive\"; doas umount -v $selected_drive && echo \"$closemsg\""

